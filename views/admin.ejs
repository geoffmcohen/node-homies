<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vegan Homies Admin Page</title>
    <link rel="stylesheet" href="/public/css/admin.css">

  </head>
  <body>
    <h1>Welcome to the Admin Page, <%= session.adminUser %></h1>
    <% if (flash) {%><%= flash %><% } %>
    <hr>
    <h2>Create Blog Post</h2>
    <form action="/admin/create_blog_post" method="post" enctype="multipart/form-data">
      Title:<br>
      <input type="text" name="title" width="100"><br>
      Body:<br>
      <textarea name="body" rows="25" cols="100"></textarea>
      <br>
      Image:
      <br>
      <input type='file' name="image_file" accept="image/*" />
      <br><br>
      <input type="submit">
    </form>
    <hr>
    <h2>Page Counts</h2>
    <table>
      <tr>
        <th><h3>Page Name</h3></th>
        <th><h3>Count</h3></th>
      </tr>
      <%
      for(var pageCount of pageCounts){
        %>
        <tr><th><%= pageCount.pageName %></th><th><%= pageCount.count %></th></tr>
        <%
      }
      %>
    </table>
    <hr>
  </body>
</html>
